<Application x:Class="Codeco.App" 
             xmlns:common="using:Codeco.Common"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Codeco" 
             xmlns:vm="using:Codeco.ViewModel">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/AppBarHint.xaml"/>
                <ResourceDictionary Source="Theme/PhoneStyles.xaml"/>
                <ResourceDictionary Source="PlatformResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <vm:ViewModelLocator x:Key="Locator" xmlns:vm="using:Codeco.ViewModel" />           
            <common:StringFormatConverter x:Key="StringFormatConverter"/>
            <common:FilenameToColorConverter x:Key="FilenameToColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>