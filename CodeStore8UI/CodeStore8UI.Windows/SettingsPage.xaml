<common:BindablePage
    x:Class="CodeStore8UI.SettingsPage"
    xmlns:common="using:CodeStore8UI.Common"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeStore8UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DataContext="{Binding Source={StaticResource Locator}, Path=Settings}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
                
        <TextBlock Text="Settings" Style="{StaticResource HeaderTextBlockStyle}" Margin="12,12,0,12"/>

        <ListView ItemsSource="{Binding SyncingFiles}">
        </ListView>

    </Grid>
</common:BindablePage>
