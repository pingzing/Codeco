<ContentDialog
    x:Class="CodeStore8UI.Controls.AddFileDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeStore8UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add file"
    PrimaryButtonText="submit"  
    SecondaryButtonText="cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    IsPrimaryButtonEnabled="False">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBox x:Name="FileNameBox" Header="File name" Text="{Binding FileName, Mode=TwoWay}" TextChanged="FileNameBox_TextChanged"/>
        <PasswordBox x:Name="PasswordBox" Header="Password" Password="{Binding Password, Mode=TwoWay}" PasswordChanged="PasswordBox_PasswordChanged" Loaded="PasswordBox_Loaded"/>        
    </StackPanel>
</ContentDialog>
