<ContentDialog
    x:Class="CodeStore8UI.Controls.PasswordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeStore8UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Enter password"
    PrimaryButtonText="submit"  
    SecondaryButtonText="cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    IsPrimaryButtonEnabled="{Binding SubmitEnabled}">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <PasswordBox x:Name="PasswordEntryBox" Header="Password" Password="{Binding Password, Mode=TwoWay}" PasswordChanged="PasswordBox_PasswordChanged" Loaded="PasswordEntryBox_Loaded"/>        
    </StackPanel>
</ContentDialog>
