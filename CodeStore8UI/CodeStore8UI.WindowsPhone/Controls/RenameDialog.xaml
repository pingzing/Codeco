<ContentDialog
    x:Class="Codeco.Controls.RenameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Codeco.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Enter new name"
    PrimaryButtonText="submit"
    SecondaryButtonText="cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    IsPrimaryButtonEnabled="False">

    <TextBox x:Name="NewNameBox" Header="File name" Text="{Binding NewName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="NewNameBox_TextChanged" Loaded="NewNameBox_Loaded"/>
    
</ContentDialog>
