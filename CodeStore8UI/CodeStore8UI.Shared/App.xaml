<Application x:Class="Codeco.App" 
             xmlns:common="using:Codeco.Common"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Codeco" 
             xmlns:vm="using:Codeco.ViewModel">
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator" xmlns:vm="using:Codeco.ViewModel" />           
            <common:StringFormatConverter x:Key="StringFormatConverter"/>
            <common:FilenameToColorConverter x:Key="FilenameToColorConverter"/>

            <!--This style gets filled at runtime. We're using it to work around the lack of 
            runtime discrimination between platforms in XAML.-->
            <Style x:Key="DynamicFileHeaderPhoneStyle" TargetType="TextBlock" BasedOn="{StaticResource SubheaderTextBlockStyle}"/>

                <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/AppBarHint.xaml"/>
                <ResourceDictionary Source="Theme/PhoneStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>