<Application x:Class="CodeStore8UI.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:CodeStore8UI" 
             xmlns:vm="using:CodeStore8UI.ViewModel">
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator" xmlns:vm="using:CodeStore8UI.ViewModel" />           
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/AppBarHint.xaml"/>
                <ResourceDictionary Source="Theme/PhoneStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>